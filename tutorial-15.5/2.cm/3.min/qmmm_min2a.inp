[INPUT]
topfile = toppar/top_all36_prot.rtf, toppar/top_all36_cgenff.rtf, toppar/cho.rtf
parfile = toppar/par_all36_prot.prm, toppar/par_all36_cgenff.prm, toppar/cho.prm
strfile = toppar/toppar_water_ions.str
psffile = ../2.equil/step4_nvt_100.psf     # protein structure file
pdbfile = ../2.equil/step4_nvt_100.pdb     # CRD file
reffile = ../2.equil/step4_nvt_100.pdb     # PDB file
rstfile = qmmm_min1.rst

[OUTPUT]
rstfile = qmmm_min2a.rst
dcdfile = qmmm_min2a.dcd

[ENERGY]
forcefield       = CHARMM        # [CHARMM]
electrostatic    = CUTOFF        # [CUTOFF,PME]
switchdist       = 16.0          # switch distance
cutoffdist       = 18.0          # cutoff distance
pairlistdist     = 19.5          # pair-list distance
vdw_force_switch = YES

[MINIMIZE]
method              = LBFGS
nsteps              = 50   # number of steps
eneout_period       = 1    # energy output period
crdout_period       = 1    # coordinates output period
rstout_period       = 1    # restart output period
nbupdate_period     = 1
fixatm_select_index = 2
macro               = yes
nsteps_micro        = 20

[BOUNDARY]
type            = NOBC           # [PBC]

[QMMM]
qmtyp              = qsimulate
qmcnt              = qsimulate.json
workdir            = qmmm_min2a
basename           = job
qmmaxtrial         = 1
qmsave_period      = 10
qmatm_select_index = 1 
exclude_charge     = group

[SELECTION]
group1  = sid:CHA
group2  = not (sid:CHA  or sid:CHA  around_res:3.0)
group3  = sid:CHA and an:C1 # C1 of CHA
group4  = sid:CHA and an:C8 # C8 of CHA
group5  = sid:CHA and an:C5 # C5 of CHA
group6  = sid:CHA and an:O2 # O2 of CHA

[RESTRAINTS]
nfunctions    = 2
function1     = DIST
constant1     = 100.0
reference1    = 1.3
select_index1 = 3 4
function2     = DIST
constant2     = 100.0
reference2    = 3.5
select_index2 = 5 6


