[INPUT]
topfile = toppar/top_all36_prot.rtf, toppar/top_all36_cgenff.rtf, toppar/cho.rtf
parfile = toppar/par_all36_prot.prm, toppar/par_all36_cgenff.prm, toppar/cho.prm
strfile = toppar/toppar_water_ions.str
psffile = ../../2.equil/step3_nvt_100.psf     # protein structure file
pdbfile = ../0.initial16/initial{}.pdb        # PDB file for input coord
reffile = ../../2.equil/step3_nvt_100.pdb     # PDB file

[OUTPUT]
dcdfile = mep_{}.dcd
logfile = mep_{}.log
rstfile = mep_{}.rst
rpathfile  = mep_{}.rpath

[ENERGY]
forcefield       = CHARMM        # [CHARMM]
electrostatic    = CUTOFF    # [CUTOFF,PME]
switchdist       = 16.0      # switch distance
cutoffdist       = 18.0      # cutoff distance
pairlistdist     = 19.5      # pair-list distance
vdw_force_switch = YES

[MINIMIZE]
method              = LBFGS
nsteps              = 200 # number of steps
eneout_period       = 2   # energy output period
nbupdate_period     = 1
fixatm_select_index = 2
macro               = yes
nsteps_micro        = 20

[RPATH]
rpathmode           = MEP
method              = STRING
delta               = 0.0005
ncycle              = 200
nreplica            = 16
eneout_period       = 1
crdout_period       = 1
rstout_period       = 1
fix_terminal        = no
massWeightCoord     = no
mepatm_select_index = 1

[BOUNDARY]
type          = NOBC      # [PBC,NOBC]

[QMMM]
qmtyp              = qsimulate
qmcnt              = qsimulate.json
workdir            = qmmm_rpath
basename           = job
qmmaxtrial         = 1
qmsave_period      = 10
qmatm_select_index = 1
exclude_charge     = group
#qminfo             = yes

[SELECTION]
group1  = sid:CHA
group2  = not (sid:CHA  or sid:CHA  around_res:6.0)


